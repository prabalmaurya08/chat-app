<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register.firstScreen">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView

            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/background_intro" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="@id/imageView"
            app:layout_constraintStart_toStartOf="@id/imageView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:srcCompat="@drawable/white_line" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/women" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_70sdp"
            android:text="WELCOME BACK"
            android:textColor="@color/white"
            android:fontFamily="@font/convergence"
            android:textSize="@dimen/_25sdp"
            app:layout_constraintEnd_toEndOf="@id/imageView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@id/imageView" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/login_btn_1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_27sdp"
            android:background="@drawable/custom_btn"
            android:fontFamily="@font/convergence"
            android:drawableEnd="@drawable/circle"
            android:layout_marginLeft="@dimen/_27sdp"
            app:layout_constraintTop_toBottomOf="@id/imageView"
            android:text="Login"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/signUp_btn_1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="@font/convergence"
            android:background="@drawable/custom_btn"
            android:drawableEnd="@drawable/circle"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_27sdp"
            android:layout_marginLeft="@dimen/_27sdp"
            app:layout_constraintTop_toBottomOf="@id/login_btn_1"
            android:text="Signup"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>